-- 現在のゲームのPlace IDを取得
local currentPlaceId = game.PlaceId

-- 指定されたPlace ID
local targetPlaceIds = {10450270085, 16379684339, 9876543210} -- ここに対象のゲームPlace IDを入力

-- 10秒待機してから実行
task.wait(10)

-- 一致する場合にコードを実行
if table.find(targetPlaceIds, currentPlaceId) then

    -- サービスを取得
    local UserInputService = game:GetService("UserInputService")
    local ReplicatedStorage = game:GetService("ReplicatedStorage")

    -- リモートイベントのパス
    local skillRemote = ReplicatedStorage.Remotes.Server.Combat.Skill
    local blackFlashRemote = ReplicatedStorage.Remotes.Server.Combat.ApplyBlackFlashToNextHitbox

    -- キーが押されたときの処理
    local function onKeyPress(input, gameProcessed)
        if gameProcessed then return end

        if input.KeyCode == Enum.KeyCode.Z then
            skillRemote:FireServer("Manic Barrage")
        elseif input.KeyCode == Enum.KeyCode.V then
            skillRemote:FireServer("Pavement Slam")
        elseif input.KeyCode == Enum.KeyCode.B then
            skillRemote:FireServer("Blitz")
        elseif input.KeyCode == Enum.KeyCode.G then
            skillRemote:FireServer("Shrapnel Barrage")
        elseif input.KeyCode == Enum.KeyCode.T then
            skillRemote:FireServer("Super Senses")
        elseif input.KeyCode == Enum.KeyCode.Y then
            skillRemote:FireServer("Jutsushi Goroshi")
        elseif input.KeyCode == Enum.KeyCode.C then
            skillRemote:FireServer("Bloodlust")
        end
    end

    -- 右クリックの処理
    local function onMouseClick(input, gameProcessed)
        if gameProcessed then return end

        if input.UserInputType == Enum.UserInputType.MouseButton2 then -- 右クリック
            blackFlashRemote:FireServer()
        end
    end

    -- 入力を検知
    UserInputService.InputBegan:Connect(onKeyPress)
    UserInputService.InputBegan:Connect(onMouseClick)
end
